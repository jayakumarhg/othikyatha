<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout android:id="@+id/rellayout"
		android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="15dip"
		android:layout_marginRight="6dip" android:layout_marginTop="6dip"
		android:layout_marginBottom="6dip" android:layout_weight="1">
		<TextView android:id="@+id/title" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginBottom="6dip"
			android:singleLine="true" android:textAppearance="?android:attr/textAppearanceLarge"
			android:ellipsize="marquee">
		</TextView>
		<LinearLayout
		android:orientation="vertical"
		    android:id="@+id/locationlist"
		    android:layout_below="@+id/title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="6dip" android:singleLine="true"
			android:ellipsize="marquee">
			<!-- Will have TextViews inserted -->
		</LinearLayout>
		
		<Button android:text="Add location" android:id="@+id/addlocation"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_below="@+id/locationlist">
		</Button>
	</RelativeLayout>
</LinearLayout>
