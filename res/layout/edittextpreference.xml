<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/widget_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingBottom="20dip" android:paddingLeft="20dip" android:paddingRight="20dip" android:paddingTop="20dip">

    <TextView android:id="@+id/title" android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
    <EditText
    android:layout_height="wrap_content"
    android:layout_width="match_parent" android:id="@+id/name"/>
</LinearLayout>
